<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Value Path" >
        <ListPreference
            android:entries="@array/step_valuepaths"
            android:entryValues="@array/step_valuepaths"
            android:key="valuepath"
            android:summary="Select a Value Path"
            android:title="Value Path" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Configuration" >
        <EditTextPreference
            android:dialogTitle="Enter Minimum Steps"
            android:inputType="number"
            android:key="min_steps"
            android:summary="Set Minimum Steps"
            android:title="Minimum Steps" />
        <EditTextPreference
            android:dialogTitle="Enter Minimum Time"
            android:inputType="number"
            android:key="min_time"
            android:summary="Set Minimum Time"
            android:title="Minimum Time" />
    </PreferenceCategory>

</PreferenceScreen>